@model MuscleHub.ViewModels.ClaseViewModel

@{
    ViewData["Title"] = "Detalles de Clase";
}

<div class="container py-4">
    <h2 class="text-primary fw-bold mb-4">
        <i class="bi bi-info-circle-fill"></i> @ViewData["Title"]
    </h2>

    <div class="card shadow-sm rounded-3 p-4 mb-4">
        <div class="row g-3">
            <div class="col-md-6"><strong>Nombre:</strong> @Model.Nombre</div>
            <div class="col-md-6"><strong>Descripción:</strong> @Model.Descripcion</div>
            <div class="col-md-6"><strong>Día:</strong> @Model.Dia</div>
            <div class="col-md-3"><strong>Hora Inicio:</strong> @Model.HoraInicio.ToString("HH:mm")</div>
            <div class="col-md-3"><strong>Hora Fin:</strong> @Model.HoraFin.ToString("HH:mm")</div>
            <div class="col-md-6"><strong>Entrenador:</strong> @Model.Entrenador?.Nombre @Model.Entrenador?.Apellido</div>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.ClaseId" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Volver
        </a>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}
