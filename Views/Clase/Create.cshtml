@model MuscleHub.ViewModels.ClaseViewModel

@{
    ViewData["Title"] = "Crear Clase";
}

<div class="container py-4">
    <div class="card shadow-sm border-0 rounded-4 p-4">
        <h2 class="mb-4 text-primary fw-bold">
            <i class="bi bi-plus-circle-fill"></i> @ViewData["Title"]
        </h2>

        <form asp-action="Create" class="d-flex flex-column gap-3">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Nombre" class="form-label fw-semibold"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ej. Yoga" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Descripcion" class="form-label fw-semibold"></label>
                    <input asp-for="Descripcion" class="form-control" placeholder="Ej. Clase relajante" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Dia" class="form-label fw-semibold"></label>
                    <input asp-for="Dia" class="form-control" placeholder="Lunes" />
                    <span asp-validation-for="Dia" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="HoraInicio" class="form-label fw-semibold"></label>
                    <input asp-for="HoraInicio" type="time" class="form-control" />
                    <span asp-validation-for="HoraInicio" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="HoraFin" class="form-label fw-semibold"></label>
                    <input asp-for="HoraFin" type="time" class="form-control" />
                    <span asp-validation-for="HoraFin" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="EntrenadorId" class="form-label fw-semibold"></label>
                    <select asp-for="EntrenadorId" class="form-select" asp-items="ViewBag.EntrenadorId"></select>
                    <span asp-validation-for="EntrenadorId" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Volver
                </a>
                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-save-fill"></i> Guardar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}
