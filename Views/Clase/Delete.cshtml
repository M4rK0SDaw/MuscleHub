@model MuscleHub.ViewModels.ClaseViewModel

@{
    ViewData["Title"] = "Eliminar Clase";
}

<div class="container py-4">
    <div class="card shadow-sm border-0 rounded-3 p-4">
        <h2 class="text-danger mb-4">
            <i class="bi bi-exclamation-triangle-fill"></i> Confirmar Eliminación
        </h2>

        <p>¿Seguro que deseas eliminar la clase <strong>@Model.Nombre</strong>?</p>

        <form asp-action="Delete" method="post" id="deleteForm">
            <input type="hidden" asp-for="ClaseId" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash-fill"></i> Eliminar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}
