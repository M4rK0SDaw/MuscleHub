@model IEnumerable<MuscleHub.ViewModels.ClaseViewModel>

@{
    ViewData["Title"] = "Listado de Clases";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary fw-bold">
            <i class="bi bi-calendar-event-fill"></i> @ViewData["Title"]
        </h2>
        <a asp-action="Create" class="btn btn-success btn-sm">
            <i class="bi bi-plus-circle-fill"></i> Crear Clase
        </a>
    </div>

    <div class="card shadow-sm rounded-4 p-3">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle table-sm">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Día</th>
                        <th>Hora Inicio</th>
                        <th>Hora Fin</th>
                        <th>Entrenador</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ClaseId</td>
                            <td>@item.Nombre</td>
                            <td>@item.Descripcion</td>
                            <td>@item.Dia</td>
                            <td>@item.HoraInicio.ToString("HH:mm")</td>
                            <td>@item.HoraFin.ToString("HH:mm")</td>
                            <td>@item.Entrenador?.Nombre @item.Entrenador?.Apellido</td>
                            <td class="d-flex gap-1">
                                <a asp-action="Edit" asp-route-id="@item.ClaseId" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ClaseId" class="btn btn-sm btn-info">
                                    <i class="bi bi-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ClaseId" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Paginación -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mt-3">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="?page=1">&laquo;</a>
                </li>
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)">&lsaquo;</a>
                </li>
                @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == (int)ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="?page=@i">@i</a>
                    </li>
                }
                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)">&rsaquo;</a>
                </li>
                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="?page=@ViewBag.TotalPages">&raquo;</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}
