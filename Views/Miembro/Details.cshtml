@model MuscleHub.ViewModels.MiembroViewModel

@{
    ViewData["Title"] = "Detalles del Miembro";
}

<div class="container py-4">
    <div class="card shadow-sm border-0 rounded-4 p-4">
        <h2 class="mb-4 text-primary fw-bold">
            <i class="bi bi-person-badge-fill"></i> @Model.Nombre @Model.Apellido
        </h2>

        <div class="row g-3 mb-4">
            <div class="col-md-6">
                <label class="form-label fw-semibold">Correo:</label>
                <p class="mb-0">@Model.Correo</p>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Teléfono:</label>
                <p class="mb-0">@Model.Telefono</p>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Fecha de nacimiento:</label>
                <p class="mb-0">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</p>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Estado:</label>
                <span class="badge @(Model.Estado ? "bg-success" : "bg-danger")">
                    @(Model.Estado ? "Activo" : "Inactivo")
                </span>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Contraseña:</label>
                <p class="mb-0"><em>*** Oculta ***</em></p>
            </div>
        </div>

        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.MiembroId" class="btn btn-warning fw-semibold">
                <i class="bi bi-pencil-square"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-primary fw-semibold">
                <i class="bi bi-arrow-left-circle"></i> Volver a la lista
            </a>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
