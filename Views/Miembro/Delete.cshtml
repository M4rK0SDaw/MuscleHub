@model MuscleHub.ViewModels.MiembroViewModel

@{
    ViewData["Title"] = "Eliminar Miembro";
}

<div class="container py-4">
    <div class="card shadow-sm border-0 rounded-4 p-4">
        <h2 class="text-danger fw-bold mb-3">
            <i class="bi bi-person-x-fill"></i> Confirmar eliminación
        </h2>

        <p class="text-muted mb-4">
            ¿Estás seguro de que deseas eliminar al siguiente miembro?
        </p>

        <!-- Información resumida del miembro -->
        <div class="bg-light p-4 rounded mb-4">
            <h4 class="fw-bold text-dark mb-3">@($"{Model.Nombre} {Model.Apellido}")</h4>

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Correo:</label>
                    <p class="mb-0">@Model.Correo</p>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Teléfono:</label>
                    <p class="mb-0">@Model.Telefono</p>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Fecha de nacimiento:</label>
                    <p class="mb-0">@Model.FechaNacimiento.ToShortDateString()</p>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Estado:</label>
                    <span class="badge @(Model.Estado ? "bg-success" : "bg-danger")">
                        @(Model.Estado ? "Activo" : "Inactivo")
                    </span>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Fecha de registro:</label>
                    <p class="mb-0">@Model.FechaRegistro.ToShortDateString()</p>
                </div>
            </div>
        </div>

        <!-- Formulario de eliminación -->
        <form asp-action="Delete" id="deleteForm">
            <input type="hidden" asp-for="MiembroId" />

            <div class="d-flex justify-content-between align-items-center">
                <a asp-action="Index" class="btn btn-secondary fw-semibold">
                    <i class="bi bi-arrow-left-circle"></i> Cancelar
                </a>

                <!-- Botón que abre el modal -->
                <button type="button" class="btn btn-danger px-4 fw-semibold" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                    <i class="bi bi-trash3-fill"></i> Eliminar
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Modal de confirmación -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title fw-bold" id="confirmDeleteModalLabel">
                    <i class="bi bi-exclamation-triangle-fill"></i> Confirmar eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">
                    ¿Seguro que deseas eliminar al miembro
                    <strong>@Model.Nombre @Model.Apellido</strong>?
                    Esta acción no se puede deshacer.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary fw-semibold" data-bs-dismiss="modal">Cancelar</button>
                <button type="submit" form="deleteForm" class="btn btn-danger fw-semibold">
                    <i class="bi bi-trash3-fill"></i> Eliminar definitivamente
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
 }

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
