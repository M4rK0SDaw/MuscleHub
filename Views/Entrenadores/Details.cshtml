@model MuscleHub.ViewModels.EntrenadoresViewModel

@{
    ViewData["Title"] = "Detalles del Entrenador";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary fw-bold">
            <i class="bi bi-person-badge-fill"></i> Detalles del Entrenador
        </h2>       
    </div>

    <div class="card shadow-sm rounded-4 p-4 mb-4">
        <h3 class="text-primary fw-bold mb-4">
            <i class="bi bi-person-circle"></i> @($"{Model.Nombre} {Model.Apellido}")
        </h3>

        <div class="row g-3">
            <div class="col-md-6 col-lg-4">
                <strong>Correo:</strong>
                <p class="mb-0">@Model.Correo</p>
            </div>

            <div class="col-md-6 col-lg-4">
                <strong>Teléfono:</strong>
                <p class="mb-0">@Model.Telefono</p>
            </div>

            <div class="col-md-6 col-lg-4">
                <strong>Especialidad:</strong>
                <p class="mb-0">@Model.Especialidad</p>
            </div>

            <div class="col-md-6 col-lg-4">
                <strong>Estado:</strong>
                <span class="badge @(Model.Estado ? "bg-success" : "bg-danger")">
                    @(Model.Estado ? "Activo" : "Inactivo")
                </span>
            </div>

            <div class="col-md-6 col-lg-4">
                <strong>Fecha de Registro:</strong>
                <p class="mb-0">@Model.FechaRegistro.ToString("dd/MM/yyyy")</p>
            </div>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.EntrenadorId" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Volver a la lista
        </a>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}
