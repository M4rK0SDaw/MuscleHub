@model MuscleHub.ViewModels.EntrenadoresViewModel

@{
    ViewData["Title"] = "Editar Entrenador";
}

<div class="container py-4">
    <div class="card shadow-sm border-0 rounded-4 p-4">
        <h2 class="mb-4 text-primary fw-bold">
            <i class="bi bi-person-lines-fill"></i> @ViewData["Title"]
        </h2>

        <form asp-action="Edit" class="d-flex flex-column gap-3">
            <input type="hidden" asp-for="EntrenadorId" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Nombre" class="form-label fw-semibold"></label>
                    <input asp-for="Nombre" class="form-control form-control-sm" placeholder="Ej. Juan" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Apellido" class="form-label fw-semibold"></label>
                    <input asp-for="Apellido" class="form-control form-control-sm" placeholder="Ej. Pérez" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Correo" class="form-label fw-semibold"></label>
                    <input asp-for="Correo" class="form-control form-control-sm" placeholder="correo@ejemplo.com" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Telefono" class="form-label fw-semibold"></label>
                    <input asp-for="Telefono" class="form-control form-control-sm" placeholder="+34 600 123 456" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Especialidad" class="form-label fw-semibold"></label>
                    <input asp-for="Especialidad" class="form-control form-control-sm" placeholder="Ej. Musculación" />
                    <span asp-validation-for="Especialidad" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Password" class="form-label fw-semibold"></label>
                    <input asp-for="Password" type="password" class="form-control form-control-sm" placeholder="Dejar en blanco para no cambiar" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-check form-switch mt-3">
                <input asp-for="Estado" class="form-check-input" type="checkbox" role="switch" id="EstadoSwitch" />
                <label class="form-check-label fw-semibold" for="EstadoSwitch">
                    @(Model.Estado ? "Activo" : "Inactivo")
                </label>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Volver
                </a>
                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-save-fill"></i> Guardar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
 }

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
