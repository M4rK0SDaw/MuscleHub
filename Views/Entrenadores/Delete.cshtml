@model MuscleHub.ViewModels.EntrenadoresViewModel

@{
    ViewData["Title"] = "Eliminar Entrenador";
}

<div class="container py-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body">
            <h1 class="text-danger mb-3">
                <i class="bi bi-exclamation-triangle-fill"></i> Confirmar Eliminación
            </h1>

            <p class="text-muted mb-4">
                ¿Estás seguro de que deseas eliminar al siguiente entrenador?
            </p>

            <div class="bg-light p-4 rounded mb-4">
                <h4 class="fw-bold text-dark mb-3">@($"{Model.Nombre} {Model.Apellido}")</h4>

                <div class="row g-3">
                    <div class="col-md-6">
                        <strong>Correo:</strong>
                        <p class="mb-0">@Model.Correo</p>
                    </div>
                    <div class="col-md-6">
                        <strong>Teléfono:</strong>
                        <p class="mb-0">@Model.Telefono</p>
                    </div>
                    <div class="col-md-6">
                        <strong>Especialidad:</strong>
                        <p class="mb-0">@Model.Especialidad</p>
                    </div>
                    <div class="col-md-6">
                        <strong>Estado:</strong>
                        <span class="badge @(Model.Estado ? "bg-success" : "bg-danger")">
                            @(Model.Estado ? "Activo" : "Inactivo")
                        </span>
                    </div>
                    <div class="col-md-6">
                        <strong>Fecha de Registro:</strong>
                        <p class="mb-0">@Model.FechaRegistro.ToShortDateString()</p>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" id="deleteForm">
                <input type="hidden" asp-for="EntrenadorId" />

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Cancelar
                    </a>

                    <!-- Botón que abre el modal -->
                    <button type="button" class="btn btn-danger px-4" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                        <i class="bi bi-trash3-fill"></i> Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel">
                    <i class="bi bi-exclamation-triangle-fill"></i> Confirmar eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">
                    ¿Seguro que deseas eliminar al entrenador
                    <strong>@Model.Nombre @Model.Apellido</strong>?
                    Esta acción no se puede deshacer.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="submit" form="deleteForm" class="btn btn-danger">
                    <i class="bi bi-trash3-fill"></i> Eliminar definitivamente
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
